class Action_Basics
  schema:
    tool:                    { type: 'Tool' }
    category:                { type: String }

class ActionInstance_Basics
  schema:
    action:                  { type: 'Action' }
    defaultRules:            { type: { array: 'Rule' } }

class Rule_Basics
  schema:
    action:                  { type: 'Action' }
    actionInstance:          { type: 'ActionInstance' }

class Step_Basics
  schema:
    rule:                    { type: 'Rule' }


exports.definitions = [
  { name: 'Tool', duck: { isLiveReloadTool: yes } }
  Action_Basics
  ActionInstance_Basics
  Rule_Basics
  Step_Basics
]
